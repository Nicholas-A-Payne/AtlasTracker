@model IEnumerable<AtlasTracker.Models.Notification>

@{
    ViewData["Title"] = "Index";
}

<body class="ticketBG">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong>All Notifications</strong>
                </div>
                @foreach (var item in Model)
                {
                    <div class="card-body">
                    <div class="card">
                        <div class="card-header" >
                            <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Sender.FullName) @Html.DisplayFor(modelItem => item.Sender.FullName)</h5>
                        </div>
                        <div>

                        </div>
                    </div>
                </div>
                }
                


                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Message)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Created)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RecipentId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Viewed)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Tickets)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NotificationType)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Sender)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Message)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Created)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Recipient.FullName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Viewed)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tickets.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NotificationType.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sender.FullName)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>
