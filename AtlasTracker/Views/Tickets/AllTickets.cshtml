@model IEnumerable<AtlasTracker.Models.Ticket>

@{
    ViewData["Title"] = "AllTickets";
}

<h1>AllTickets</h1>

<header class="page-header">
    <h2>All Tickets</h2>
    <div class="right-wrapper text-end">
        <ol class="breadcrumbs">
            <li>
                <a asp-action="Dashboard" asp-controller="Home">
                    <i class="bx bx-home-alt"></i>
                </a>
            </li>

            <li><span>All Tickets</span></li>

        </ol>

        <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>
    </div>
</header>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong>All Tickets</strong>
            </div>
            <div class="card-body">
                <table class="table" id="allTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Title)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Created)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Archived)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Projects)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TicketPriority)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TicketTypes)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TicketStatus)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.DeveloperUser)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                                <tr>
                                    <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                    @Html.DisplayFor(modelItem => item.Created)
                                    </td>

                                    <td>
                                    @Html.DisplayFor(modelItem => item.Archived)
                                    </td>

                                    <td>
                                    @Html.DisplayFor(modelItem => item.Projects.Name)
                                    </td>
                                    <td>
                                    @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                                    </td>
                                    <td>
                                    @Html.DisplayFor(modelItem => item.TicketTypes.Name)
                                    </td>
                                    <td>
                                    @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                                    </td>
                                    <td>
                                    @Html.DisplayFor(modelItem => item.DeveloperUser.Id)
                                    </td>
                                    <td>
                                        <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                        <a class="btn btn-outline-secondary btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                        <a class="btn btn-outline-danger btn-sm" asp-action="Archive" asp-route-id="@item.Id">Archive</a>
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>



@section scripts{
<script>
    $(document).ready( function () {
    $('#allTable').DataTable();
     } );
</script>
}

